{
  "name": "SmartShop E-Commerce",
  "description": "A full-featured e-commerce platform built with Django",
  "keywords": ["django", "e-commerce", "shopping", "python"],
  "website": "https://github.com/yourusername/e-commerce",
  "repository": "https://github.com/yourusername/e-commerce",
  "logo": "https://raw.githubusercontent.com/yourusername/e-commerce/main/static/images/logo.png",
  "success_url": "/",
  "env": {
    "SECRET_KEY": {
      "description": "Django secret key for security",
      "generator": "secret"
    },
    "DEBUG": {
      "description": "Debug mode (set to False in production)",
      "value": "False"
    },
    "EMAIL_HOST_USER": {
      "description": "Email address for sending emails",
      "required": false
    },
    "EMAIL_HOST_PASSWORD": {
      "description": "Email password or app password",
      "required": false
    }
  },
  "formation": {
    "web": {
      "quantity": 1,
      "size": "basic"
    }
  },
  "addons": [
    {
      "plan": "heroku-postgresql:mini"
    }
  ],
  "buildpacks": [
    {
      "url": "heroku/python"
    }
  ],
  "scripts": {
    "postdeploy": "python manage.py migrate && python manage.py collectstatic --noinput"
  }
}
