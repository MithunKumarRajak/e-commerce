# Docker Environment Variables
# Copy this file to .env for docker-compose deployment

# Django Core Settings
SECRET_KEY=django-insecure-change-this-to-a-secure-random-key-in-production
DEBUG=False
ALLOWED_HOSTS=localhost,127.0.0.1

# Database (automatically configured in docker-compose.yml)
# DATABASE_URL is set by docker-compose to connect to the PostgreSQL container
# DATABASE_URL=postgresql://ecommerce_user:ecommerce_password@db:5432/ecommerce_db

# Email Configuration
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password
EMAIL_USE_TLS=True
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend

# For development, use console backend:
# EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
